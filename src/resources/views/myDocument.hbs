<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="wrap min-height-80">
                    <div class="col-lg-4" style="float: left; display: flex;">
                        <div class="info-cus">
                            <p class="title-cus">
                                Tài liệu của bạn
                            </p>
                            <p>
                                Trường: Đại học FPT
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <br>
        <div class="row">
            <div class="col-lg-12">
                <div class="row merged20" id="page-contents">
                    <div class="col-lg-12">
                        <div class="central-meta">
                            <div class="title-block">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="align-left">
                                            <h5>
                                                <span>Các thư mục của bạn</span>
                                            </h5>
                                            <a
                                                class="text-reset dropdown-toggle d-flex align-items-center hidden-arrow show-add-major">
                                                <div class="btn btn-primary">
                                                    <i class="fa fa-plus"></i> Thêm ngành học
                                                </div>
                                            </a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="central-meta">
                            <div class="row">
                                {{#each majors}}
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 merged5">
                                    <div class="wrap min-height-150 item-cus">
                                        <a class="" href="sets/{{this.majorID}}" title="{{this.majorID}} - {{this.majorName}}" data-strip-group="mygroup"
                                            data-strip-group-options="loop: false">
                                            <div class="strip">
                                                <p class="title-cus editp"><img class="fix-size-40 img-cus"
                                                        src="../source/src/name.png"> {{this.majorID}} - {{this.majorName}}</p>
                                                <p class="p-cus"><img class="img-cus" src="../source/src/all (1).png">
                                                    10 tài liệu</p>
                                                <p class="p-cus"><img class="img-cus" src="../source/src/schedule.png">
                                                    {{this.createDate}}</p>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div><!-- photos -->
                    </div><!-- centerl meta -->
                </div>
            </div>
        </div>
    </div>
</section>